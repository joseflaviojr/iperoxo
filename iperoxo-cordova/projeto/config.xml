<?xml version='1.0' encoding='utf-8'?>
<widget id="com.joseflavio.iperoxo" version="1.0-A21" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ipê-roxo</name>
    <description>
        Modelo de aplicação que combina Cordova com Ipê-roxo Web.
    </description>
    <author email="email@joseflavio.com" href="https://joseflavio.com">
        José Flávio de Souza Dias Júnior
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <hook src="scripts/android/before_build.sh" type="before_build" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <icon src="res/icon.png" />
</widget>